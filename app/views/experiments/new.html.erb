<div class="row">
  <div class="col-md-12">
    <h1>New Experiment</h1>
    <%= form_for @experiment, url: {action: 'create'} do |f| %>

      <div class="form-group">
        <label>Name</label><br />
        <%= f.text_field :name, autofocus: true, required: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label>URL</label><br />
        <%= f.text_field :url, autofocus: true, required: true, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Create", class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>